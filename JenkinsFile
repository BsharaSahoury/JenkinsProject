pipeline {
   agent { node { label 'slave01' } }

   stages {
      stage('Build') { 
	    steps { 
	    	sh 'echo "My first pipeline"' 
	    	sh ''' 
	    		echo "By the way, I can do more stuff in here" 
	    		ls -la ~ 
	    	''' 
	    } 
}  
      
	  stage('Test') {
         steps {
            echo 'The Test is startedd'
         }
      }
	  stage('Deploy') {
         steps {
            echo 'The Deploy is started'
         }
      }
      stage('Timeout') { 
	      steps { 
	      	  retry(3) { 
	      	  	  sh 'echo "I am not going to work :c"' 
	      	  }
	      }
      }
      
   }
}
