pipeline {
   agent { node { label 'slave01' } }

   stages {
   when {
      // Only say hello if a "greeting" is requested
      expression { params.Language == 'All' }
        }
      stage('C') {
         steps {
            echo 'The Build is started'
         }
      }
	  stage('Python') {
         steps {
            echo 'The Test is started'
         }
      }
	  stage('Bash') {
         steps {
            echo 'The Deploy is started'
         }
      }
   }
}
